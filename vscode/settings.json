{
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "terminal.integrated.commandsToSkipShell": [
    "language-julia.interrupt"
  ],
  "julia.symbolCacheDownload": true,
  "julia.enableTelemetry": false,
  "editor.inlineSuggest.enabled": true,
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]",
    "FFF",
    "WWW",
    "III",
    "QQQ"
  ],
  "todo-tree.highlights.backgroundColourScheme": [
    "red",
    "orange",
    "yellow",
    "green",
    "blue",
    "indigo",
    "violet",
    "grey",
    "yellow",
    "red"
  ],
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": false
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[python]": {
    "editor.formatOnType": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.editorAssociations": {
    "*.fbx": "3dviewer.viewer"
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never",
    "source.addMissingImports": "never"
  },
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches",
    "tags"
  ],
  "workbench.editor.splitInGroupLayout": "vertical",
  "terminal.integrated.inheritEnv": false,
  "jupyter.widgetScriptSources": [
    "jsdelivr.com",
    "unpkg.com"
  ],
  "liveshare.notebooks.allowGuestExecuteCells": true,
"githubPullRequests.pullBranch": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "window.commandCenter": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "chat.editing.alwaysSaveWithGeneratedChanges": true,
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "workbench.startupEditor": "none",
  "python.createEnvironment.trigger": "off",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.confirmPasteNative": false,
  "files.eol": "\n",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "jupyter.askForKernelRestart": false,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "cSpell.userWords": [
    "amiodarone",
    "levelname",
    "llava",
    "ollama",
    "QWEN",
    "Segal"
  ],
  "terminal.integrated.allowedLinkSchemes": [
    "file",
    "http",
    "https",
    "mailto",
    "vscode",
    "vscode-insiders",
    "docker-desktop"
  ],
  "workbench.colorTheme": "Visual Studio Dark",
  "git.ignoreRebaseWarning": true,
  "python.analysis.typeCheckingMode": "basic",
  "github.copilot.nextEditSuggestions.enabled": true,
  "cSpell.enabledSchemes": {
    "comment": true,
    "file": true,
    "gist": true,
    "repo": true,
    "sftp": true,
    "untitled": true,
    "vscode-notebook-cell": true,
    "vscode-scm": true,
    "vscode-userdata": true,
    "vscode-vfs": true,
    "vsls": true,
    "overleaf-workshop": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "diffEditor.renderSideBySide": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "window.autoDetectColorScheme": true,
  "workbench.preferredLightColorTheme": "Visual Studio Dark",
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "git.openRepositoryInParentFolders": "always",
  "chat.mcp.gallery.enabled": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1"
}